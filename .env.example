# =============================================================================
# Detecktiv.io Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your environment
# Never commit real secrets to version control

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
API_TITLE="Detecktiv.io API"
API_VERSION="1.0.0"
API_DESCRIPTION="UK IT Sales Intelligence Platform"
DEBUG=true
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=strong-dev-password-change-me
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=detecktiv
POSTGRES_SSLMODE=disable

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# -----------------------------------------------------------------------------
# pgAdmin (Development Convenience)
# -----------------------------------------------------------------------------
PGADMIN_DEFAULT_EMAIL=admin@detecktiv.local
PGADMIN_DEFAULT_PASSWORD=strong-pgadmin-password

# -----------------------------------------------------------------------------
# Companies House API Integration
# -----------------------------------------------------------------------------
# Get your API key from: https://developer.company-information.service.gov.uk/
COMPANIES_HOUSE_API_KEY=your-companies-house-api-key-here
COMPANIES_HOUSE_BASE_URL=https://api.companieshouse.gov.uk
COMPANIES_HOUSE_RATE_LIMIT=600

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Generate a strong secret key for JWT tokens and session signing
SECRET_KEY=your-super-secret-jwt-signing-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS=100

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Web Scraping Configuration
# -----------------------------------------------------------------------------
SCRAPING_USER_AGENT="Detecktiv.io Bot 1.0 (+https://detecktiv.io/robots)"
SCRAPING_DELAY=1.0
SCRAPING_MAX_RETRIES=3

# -----------------------------------------------------------------------------
# Testing Configuration
# -----------------------------------------------------------------------------
TESTING=false
RUN_DB_TESTS=false

# -----------------------------------------------------------------------------
# Container/Docker Configuration
# -----------------------------------------------------------------------------
# These are used by Docker containers and may override the above
# ALEMBIC_CONFIG=/app/alembic.ini
# RUN_MIGRATIONS_ON_BOOT=1

# -----------------------------------------------------------------------------
# Production Overrides (used in production environments)
# -----------------------------------------------------------------------------
# In production, you would typically:
# 1. Set DEBUG=false
# 2. Set ENVIRONMENT=production  
# 3. Use a secrets manager for sensitive values
# 4. Restrict CORS_ORIGINS to your actual domains
# 5. Use stronger SECRET_KEY (min 32 characters)
# 6. Enable SSL/TLS (POSTGRES_SSLMODE=require)
# 7. Set appropriate LOG_LEVEL (INFO or WARNING)